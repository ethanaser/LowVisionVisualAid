<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_msg_image"
        android:layout_width="@dimen/bottom_logo_width"
        android:layout_height="@dimen/bottom_logo_height"
        android:layout_margin="13dp"
        android:src="@mipmap/fakecolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_msg_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="@dimen/remind_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="26dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>