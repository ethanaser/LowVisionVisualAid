<!--        app:layout_constraintBottom_toBottomOf="parent" />-->

    <ImageView
        android:id="@+id/first_battery_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/battery_full"
        app:layout_constraintLeft_toRightOf="@+id/first_menu_listview"
        app:layout_constraintBottom_toBottomOf="@+id/first_menu_listview" />

    <TextView
        android:id="@+id/first_battery_text"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="100%"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/first_battery_image"
        app:layout_constraintTop_toTopOf="@id/first_battery_image" />

    <ImageView
        android:id="@+id/first_wifi_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/wifi_success"
        app:layout_constraintTop_toTopOf="@+id/first_menu_listview"
        app:layout_constraintLeft_toLeftOf="@+id/first_battery_text" />

</androidx.constraintlayout.widget.ConstraintLayout>