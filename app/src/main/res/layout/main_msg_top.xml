<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_msg_top_image"
        android:layout_width="@dimen/main_msg_top_image_size"
        android:layout_height="@dimen/main_msg_top_image_size"
        android:layout_centerVertical="true"
        android:src="@mipmap/ocr"
        app:layout_constraintHorizontal_bias="0.135" />

    <ImageView
        android:id="@+id/main_msg_top_anti"
        android:layout_width="@dimen/main_msg_top_image_size"
        android:layout_height="@dimen/main_msg_top_image_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@id/main_msg_top_image"
        android:src="@mipmap/anti_shake"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/main_msg_top_bluetooth"
        android:layout_width="@dimen/main_msg_top_image_size"
        android:layout_height="@dimen/main_msg_top_image_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/main_msg_top_anti"
        android:src="@mipmap/bluetooth_failure"
        app:layout_constraintHorizontal_bias="0.62" />

    <ImageView
        android:id="@+id/main_msg_top_wifi"
        android:layout_width="@dimen/main_msg_top_image_size"
        android:layout_height="@dimen/main_msg_top_image_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/main_msg_top_bluetooth"
        android:src="@mipmap/wifi_failure" />

    <ImageView
        android:id="@+id/main_msg_top_battery"
        android:layout_width="@dimen/main_msg_top_image_size"
        android:layout_height="@dimen/main_msg_top_image_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/main_msg_top_wifi"
        android:src="@mipmap/battery_full"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/main_msg_top_battery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/main_msg_top_battery"
        android:text="100%"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"/>


</RelativeLayout>